<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-3">
        <form action="/spots" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="type">Spot type</label required>
                <input class="form-control" type="text" id="type" name="spot[type]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="spot[image]" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="spot[description]" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Spot</button>
            </div>
        </form>
        <a href="/spots">All Spots</a>
    </div>
</div>
